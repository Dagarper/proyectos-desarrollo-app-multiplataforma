<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3F51B5"
            android:text="AMÉRICA"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="223dp"
            app:srcCompat="@drawable/america" />

        <TextView
            android:id="@+id/textPais2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="América es el segundo continente más grande de la Tierra, después de Asia. Ocupa la gran parte del hemisferio occidental del planeta. "
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Algunos países son:"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/ckBoxEEUU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estados Unidos" />

        <CheckBox
            android:id="@+id/ckBoxMexico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mexico" />

        <CheckBox
            android:id="@+id/ckBoxBrasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Brasil" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="129dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnVolverAm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#3F51B5"
                android:text="Volver" />

            <Button
                android:id="@+id/btnVerPaisesAm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#3F51B5"
                android:text="Ver países" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>