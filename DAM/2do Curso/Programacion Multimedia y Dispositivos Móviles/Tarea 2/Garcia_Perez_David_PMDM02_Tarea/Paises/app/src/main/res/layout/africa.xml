<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3F51B5"
            android:text="AFRICA"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/africa" />

        <TextView
            android:id="@+id/textPais2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="África es el tercer continente más extenso, tras Asia y América. Está situado entre los océanos Atlántico, al oeste, e Índico, al este."
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Algunos países son:"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/ckBoxMarruecos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Marruecos" />

        <CheckBox
            android:id="@+id/ckBoxKenia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kenia" />

        <CheckBox
            android:id="@+id/ckBoxSudafrica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sudáfrica" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="149dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnVolverAf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#3F51B5"
                android:text="Volver" />

            <Button
                android:id="@+id/btnVerPaisesAf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#3F51B5"
                android:text="Ver países" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>